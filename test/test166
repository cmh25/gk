show:{[t]                                 / show
 if[(@*t[])|1<#?#'t[]                     / if not a table
  :((-|/#'$k)$k:!t),'" : ",/5:'t[]]
 t}

c:10

d:.()
d.a:draw[c;10]
d.b:draw[c;10]
d.c:draw[c;10]

"select"
i:!0
t:.()
t.a:d[`a;i]
t.b:d[`b;i]
t.c:d[`c;i]
t
show t

@!0
@0#0.0
@""
@0#`

